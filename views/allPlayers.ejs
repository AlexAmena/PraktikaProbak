<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Players</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    
</head>

<body>
    <table class="table table-striped">
        <h1>Players List</h1>
        <h1><a href="/api/v1/players/add"><button>Add New Player</button></a></h1>
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Birth Date</th>
                <th>Nationality</th>
                <th>Position</th>
                <th>League</th>
                <th>Team</th>
            </tr>
        </thead>
        <% players.forEach(player=>{ %>
            <tr>
                <td><%= player.id %>
                </td>
                <td><%= player.name %>
                </td>
                <td><%= player.birthdate %>
                </td>
                <td><%= player.nationality %>
                </td>
                <td><%= player.position %>
                </td>
                <td><%= player.leagueId %>
                </td>
                <td><%= player.teamId %>
                </td>
                <td> <a href="/api/v1/players/<%= player.id %>"><button>See</button></a></td>
                <td><a href="/api/v1/players/edit/<%= player.id %>"><button>Edit</button></a></td>
                <td><a href="/api/v1/players/remove/<%= player.id %>"><button>Remove</button></a></td>
            </tr>
            <% }) %>
</body>

</html>